@model AssignRoleViewModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "設定角色";
}

<div class="card">
    <div class="card-header bg-success text-white d-flex justify-content-between">
        <h5>設定角色 - @Model.Username</h5>
        <a asp-action="Detail" asp-route-id="@Model.MemberId" class="btn btn-sm btn-light">返回</a>
    </div>
    <div class="card-body">
        <form asp-action="AssignRole" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="MemberId" />

            <div class="mb-3">
                <label class="form-label">可選角色</label>
                <div>
                    @foreach (var r in Model.Roles)
                    {
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="SelectedRoleIds" value="@r.RoleId"
                                   @(Model.CurrentRoleIds.Contains(r.RoleId) ? "checked" : "") />
                            <label class="form-check-label">@r.RoleName</label>
                        </div>
                    }
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <a asp-action="Detail" asp-route-id="@Model.MemberId" class="btn btn-secondary me-2">取消</a>
                <button type="submit" class="btn btn-primary">儲存</button>
            </div>
        </form>
    </div>
</div>
