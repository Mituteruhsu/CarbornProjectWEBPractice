@model CarbonProject.Models.MembersViewModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "編輯會員資料";
}

<div class="container my-4">
    <div class="card shadow-sm border border-primary bg-transparent">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">編輯會員 - @Model.Username</h3>
            <a href="@Url.Action("Detail", new { id = Model.MemberId })" class="btn btn-sm btn-light">返回詳情</a>
        </div>

        <form asp-action="Edit" method="post" class="p-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="MemberId" />

            <div class="row g-3">
                <!-- 帳號 -->
                <div class="col-md-6">
                    <label asp-for="Username" class="form-label">帳號（Username）</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <!-- Email -->
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <!-- 姓名 -->
                <div class="col-md-6">
                    <label asp-for="FullName" class="form-label">姓名</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>

                <!-- 生日 -->
                <div class="col-md-6">
                    <label asp-for="Birthday" class="form-label">生日</label>
                    <input asp-for="Birthday" class="form-control" type="date" />
                    <span asp-validation-for="Birthday" class="text-danger small"></span>
                </div>

                <!-- 性別 -->
                <!-- 性別 -->
                <div class="col-md-6">
                    <label asp-for="Gender" class="form-label">性別</label>
                    <select asp-for="Gender" class="form-select">
                        <option value="">請選擇</option>
                        <option value="M" @@(Model.Gender == "M" ? "selected" : "")>男</option>
                        <option value="F" @@(Model.Gender == "F" ? "selected" : "")>女</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger small"></span>
                </div>

                <!-- 地址 -->
                <div class="col-md-6">
                    <label asp-for="Address" class="form-label">地址</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>

                <!-- 啟用狀態 -->
                <div class="col-md-6">
                    <label asp-for="IsActive" class="form-label">啟用狀態</label>
                    <select asp-for="IsActive" class="form-select">
                        <option value="true" @@(Model.IsActive ? "selected" : "")>啟用</option>
                        <option value="false" @@(!Model.IsActive ? "selected" : "")>停用</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger small"></span>
                </div>

                <!-- 所屬公司（只讀） -->
                <div class="col-md-6">
                    <label class="form-label">所屬公司</label>
                    <input type="text" class="form-control" value="@Model.Company?.CompanyName "未設定"" disabled />
                    <small class="text-muted">公司不可編輯，如需修改請聯絡管理員</small>
                </div>

                <!-- 角色（只讀） -->
                <div class="col-md-12">
                    <label class="form-label">角色</label>
                    <input type="text" class="form-control"
                           value="@string.Join(", ", Model.UserRoles.Select(r => r.Role.RoleName))"
                           disabled />
                    <small class="text-muted">角色管理請使用 AssignRole 功能</small>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-end">
                <a href="@Url.Action("Detail", new { id = Model.MemberId })" class="btn btn-secondary me-2">取消</a>
                <button type="submit" class="btn btn-primary">儲存修改</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
