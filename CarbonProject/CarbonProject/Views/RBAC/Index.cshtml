@model IEnumerable<CarbonProject.Models.MembersViewModel>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "使用者管理";
}

<h2>使用者管理</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>帳號</th>
            <th>姓名</th>
            <th>Email</th>
            <th>Role</th>
            <th>狀態</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.MemberId</td>
                <td>@user.Username</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@(user.IsActive ? "啟用" : "停用")</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "Users", new { id = user.MemberId })">編輯</a>
                    <form method="post" action="@Url.Action("Disable", "Users", new { id = user.MemberId })" style="display:inline">
                        <button class="btn btn-warning btn-sm" type="submit">停用</button>
                    </form>
                    <form method="post" action="@Url.Action("Delete", "Users", new { id = user.MemberId })" style="display:inline">
                        <button class="btn btn-danger btn-sm" type="submit">刪除</button>
                    </form>
                    <form method="post" action="@Url.Action("ResetPassword", "Users", new { id = user.MemberId })" style="display:inline">
                        <input name="newPassword" type="text" placeholder="新密碼" />
                        <button class="btn btn-secondary btn-sm" type="submit">重設密碼</button>
                    </form>
                    <form method="post" action="@Url.Action("SetRole", "Users", new { id = user.MemberId })" style="display:inline">
                        <input name="role" type="text" value="@user.Role" />
                        <button class="btn btn-info btn-sm" type="submit">設定角色</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
