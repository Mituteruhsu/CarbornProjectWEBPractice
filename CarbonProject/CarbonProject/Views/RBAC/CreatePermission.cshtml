@using CarbonProject.Models.RBACViews
@model PermissionsViewModel

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "新增權限";
}

<h2>新增權限</h2>

<form asp-action="CreatePermission" method="post" class="mx-sm-5" style="max-width:500px;">
    <div class="form-group">
        <label>Permission Key</label>
        <input asp-for="PermissionKey" class="form-control" />
    </div>
    <div class="form-group">
        <label>描述</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success mt-2">建立</button>
</form>