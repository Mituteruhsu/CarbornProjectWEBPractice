@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var roles = HttpContextAccessor.HttpContext?.Session.GetString("Roles")?.Split(',');
    // 目前頁面被選取的 active 狀態
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Terra CarbonProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarbonProject.styles.css" asp-append-version="true" />

    @await RenderSectionAsync("HeadContent", required: false)

</head>
<body>
    @{
        // 取得目前登入狀態與使用者資訊
        var isLogin = HttpContextAccessor.HttpContext?.Session.GetString("isLogin") == "true";
        var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
        var role = HttpContextAccessor.HttpContext?.Session.GetString("Role");
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid ps-5">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/TerraLogo.png" alt="Terra CarbonProject Logo" style="height:40px; width:auto; margin-right:8px;" />
                    <span style="color:black;">Terra CarbonProject</span>
                </a>
                <div class="d-flex align-items-center" style="color:black;">
                    <b>@username</b>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link px-3 px-sm-auto @(currentController == "Home" && currentAction == "Index" ? "active text-success fw-bold border border-success rounded-top" : "text-dark")" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 px-sm-auto @(currentController == "Dashboard" && currentAction == "Index" ? "active text-success fw-bold border border-success rounded-top" : "text-dark")" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="DataGoals" asp-action="">數據與目標</a>
                        </li>                         *@
                        <li class="nav-item">
                            <a class="nav-link px-3 px-sm-auto @(currentController == "Home" && currentAction == "Privacy" ? "active text-success fw-bold border border-success rounded-top" : "text-dark")" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 px-sm-auto  @(currentController == "Home" && currentAction == "Refrences" ? "active text-success fw-bold border border-success rounded-top" : "text-dark")" asp-area="" asp-controller="Home" asp-action="Refrences">Refrences</a>
                        </li>
                    </ul>
                    <!-- 右側登入／登出區 -->               
                    <ul class="navbar-nav ms-auto pe-5">
                        @* 如果是 Admin 登入，顯示管理入口 *@
                        @if (roles?.Contains("Admin") == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark fw-bold dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                    管理後台
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">儀表板 Dashboard</a></li>
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Index">使用者管理</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Permissions">角色權限</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Admin_read">個人帳號管理</a></li>
                                    <li><a class="dropdown-item" asp-controller="Logs" asp-action="Index">系統 Logs</a></li>
                                </ul>
                            </li>
                        }
                        @if (isLogin)
                        {
                            
                            <li class="nav-item d-flex align-items-center">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm py-2">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main roles="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container text-end">
            &copy; 2025 - CarbonProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
