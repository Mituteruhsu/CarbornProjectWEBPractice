        }
        /* Dark Mode */
        body.dark-mode {
            background: #1b1b1b;
            color: #f5f5f5;
        }
        /* Navbar */
        .spring-nav {
            background: var(--spring-blue);
            height: var(--navbar-height); /* ⭐ 固定高度 */
            line-height: var(--navbar-height); /* ⭐ 讓文字垂直置中 */
        }
        /* Sidebar */
        .spring-sidebar {
            width: 250px;
            height: calc(100vh - var(--navbar-height)); /* ⭐ 扣除 navbar */
            background: #E9E9F7;
            position: fixed;
            top: var(--navbar-height); /* ⭐ 讓 Sidebar 正好貼在 Navbar 下 */
            left: -260px;
            overflow-y: auto;
            z-index: 2000;
        }

            .spring-sidebar.open {
                left: 0;
            }
        /* Sidebar links */
        .sidebar-link {
            padding: 10px 15px;
            font-size: 1rem;
            border-radius: 8px;
            color: #2D2D4D;
            transition: 0.2s;
        }

            .sidebar-link:hover {
                background: var(--spring-blue);
                color: white;
            }
        /* Content area */
        .content-area {
            margin-left: 0;
            transition: margin-left .3s ease;
        }
        @@media (min-width: 768px) {
            .spring-sidebar {
                left: 0;
            }

            .content-area {
                margin-left: 250px;
            }
        }
        /* Dark Mode 強化 */
        body.dark-mode .spring-sidebar {
            background: #333;
        }

        body.dark-mode .sidebar-link {
            color: #dcdcdc;
        }

            body.dark-mode .sidebar-link:hover {
                background: var(--spring-blue-dark);
            }

        overflow-y: auto;
        z-index: 2000;
    }

        .spring-sidebar.open {
            left: 0;
        }

    /*Sidebar links */
    .sidebar-link {
        padding: 10px 15px;
        font-size: 1rem;
        border-radius: 8px;
        color: var(--spring-blue);
        transition: 0.2s;
    }

        .sidebar-link:hover {
            background: var(--spring-blue);
            color: white;
        }
    /*Content area */
    .content-area {
        margin-left: 0;
        margin-top: var(--navbar-height);
        transition: margin-left .3s ease;
    }

    @@media (min-width: 768px) {
        .spring-sidebar {
            left: 0;
        }

        .content-area {
            margin-top: var(--navbar-height);
            margin-left: 250px;
        }
    }
    /* Dark Mode 强化 */
    body.dark-mode .spring-sidebar {
        background: #333;
    }

    body.dark-mode .sidebar-link {
        color: #dcdcdc;
    }

        body.dark-mode .sidebar-link:hover {
            background: var(--spring-blue-dark);
        }

    /* ============================
       🌙 dark-mode 顏色覆蓋
       ============================ */
    body.dark-mode table {
        color: #e9ecef !important; /* table 文字改亮色 */
    }

    body.dark-mode .table-light,
    body.dark-mode .table thead.table-light {
        background-color: #2c2c2c !important;
        color: #e9ecef !important; /* 標題變亮色 */
    }

    body.dark-mode .table-hover tbody tr:hover {
        background-color: #3a3a3a !important;
    }

    /* ============================
       Chart.js CSS 變數
       ============================ */
    :root {
        --chart-text: #212529;
        --chart-grid: #dee2e6;
        --chart-line: #198754; /* 綠色 */
        --chart-line-bg: rgba(25,135,84,0.1);
    }

    /* Dark Mode */
    body.dark-mode {
        --chart-text: #e9ecef;
        --chart-grid: #555;
        --chart-line: #4ade80; /* 偏亮綠 */
        --chart-line-bg: rgba(74,222,128,0.1);
    }

        /* Dark Mode hover */
        body.dark-mode .table-hover tbody tr:hover {
            background-color: #BDDDC4 !important;
            transition: background-color .15s;
        }

    /* Light Mode hover */
    body.light-mode .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.05) !important;
        transition: background-color .15s;
    }

    /* Light Mode – 使用深綠 */
    body.light-mode .navbar .navbar-brand {
        color: #333 !important;
    }

    /* Dark Mode – 使用對比白色 */
    body.dark-mode .navbar .navbar-brand {
        color: #e9ecef !important;
    }
</style>
<!-- Top Navbar -->
<nav class="navbar navbar-light spring-nav shadow-sm px-3 fixed-top" style="margin-top:65px;">
    <button id="sidebarToggleBtn" class="btn btn-outline-success me-2 d-md-none">
        <i class="bi bi-list"></i>
    </button>

    <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">🌿 @companyname</a>

    <div class="ms-auto d-flex align-items-center">
        <button id="modeToggle" class="btn btn-outline-primary me-3">
            <i class="bi bi-brightness-high"></i>
        </button>
    </div>
</nav>
@if (role.Contains("Manager"))
{
    <partial name="Partials/_CompanyManagerPanel" />
}
else if (role.Contains("Staff"))
{
    <partial name="Partials/_CompanyStaffPanel" />
}
else
{
    <partial name="Partials/_Default" />
}
<!-- Main content -->
<div id="content" class="content-area pt-4">
    <div>
        @RenderBody()
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/dashboard.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js" asp-append-version="true"></script>
<script src="~/js/admin.js" asp-append-version="true"></script>

