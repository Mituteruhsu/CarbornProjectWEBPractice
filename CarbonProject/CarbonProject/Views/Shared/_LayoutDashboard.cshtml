<style>
    /* 基本色系 - 春天綠 */
    :root {
        --spring-blue: #85AEE4;
        --spring-blue-dark: #5E7BA1;
        --spring-bg: #f3fdf3;
        --dark-bg: #2b2b2b;
        --navbar-height: 56px;
    }

    /* Light Mode */
    body.light-mode {
        background: var(--spring-bg);
        color: #333;
    }

    /* Dark Mode */
    body.dark-mode {
        background: #1b1b1b;
        color: #f5f5f5;
    }

    /* Navbar */
    .spring-nav {
        background: var(--spring-blue);
    }

    /* Sidebar */
    .spring-sidebar {
        width: 250px;
        height: calc(100vh - var(--navbar-height));
        background: #E9E9F7;
        position: fixed;
        top: calc(var(--navbar-height) + 65px); /* ⭐ 初始要跟 navbar margin 對齊 */
        left: -260px;
        transition: left 0.25s ease; /* 基本色系 - 春天綠 */
