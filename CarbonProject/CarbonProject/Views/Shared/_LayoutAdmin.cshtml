@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var isLogin = HttpContextAccessor.HttpContext?.Session.GetString("isLogin") == "true";
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
    var role = HttpContextAccessor.HttpContext?.Session.GetString("Roles");

    if (!isLogin || role == null)
    {
        <text>
            <script>
                window.location.href = '/Account/Login';
            </script>
        </text>
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Carbon Admin Panel</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    
    <!-- Cropper.js CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet" />

    @await RenderSectionAsync("HeadContent", required: false)
</head>

<body class="light-mode">

    <!-- Top Navbar -->
    <nav class="navbar navbar-light spring-nav shadow-sm px-3 fixed-top">
        <button id="sidebarToggleBtn" class="btn btn-outline-success me-2 d-md-none">
            <i class="bi bi-list"></i>
        </button>

        <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">🌿 Carbon Admin</a>

        <div class="ms-auto d-flex align-items-center">
            <button id="modeToggle" class="btn btn-outline-success me-3">
                <i class="bi bi-brightness-high"></i>
            </button>

            <span class="me-3 fw-bold">@username</span>

            <form asp-controller="Account" asp-action="Logout" method="post">
                <button class="btn btn-success">Logout</button>
            </form>
        </div>
    </nav>

    <!-- Sidebar -->
    <div id="sidebar" class="spring-sidebar shadow">
        

        <ul class="nav flex-column px-3">
            <li class="nav-item pt-3 px-3">
                <h5 class="fw-bold text-success">管理選單</h5>
            </li>

            <li class="nav-item mb-1">
                <a asp-controller="Admin" asp-action="Dashboard"
                   class="nav-link sidebar-link"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a>
            </li>

            @* Role-based *@
            @if (role == "Admin" || role == "Manager")
            {
                <li class="nav-item mb-1">
                    <a asp-controller="Users" asp-action="Index"
                       class="nav-link sidebar-link"><i class="bi bi-people me-2"></i>使用者管理</a>
                </li>

                <li class="nav-item mb-1">
                    <a asp-controller="RBAC" asp-action="Index"
                       class="nav-link sidebar-link"><i class="bi bi-shield-lock me-2"></i>角色權限</a>
                </li>
            }

            @if (role == "Admin")
            {
                <li class="nav-item mb-1">
                    <a asp-controller="Profile" asp-action="Index"
                       class="nav-link sidebar-link"><i class="bi bi-person-badge me-2"></i>個人帳號管理</a>
                </li>

                <li class="nav-item mb-1">
                    <a asp-controller="Logs" asp-action="Index"
                       class="nav-link sidebar-link"><i class="bi bi-journal-text me-2"></i>系統 Logs</a>
                </li>
            }
        </ul>
    </div>

    <!-- Main content -->
    <div id="content" class="content-area p-4">
        @RenderBody()
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
