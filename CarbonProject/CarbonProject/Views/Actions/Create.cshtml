@model CarbonProject.Models.ESGAction
@{
    ViewData["Title"] = "新增行動方案";
}

<h3 class="mt-3 mb-3">新增行動方案</h3>

<form asp-controller="Actions" asp-action="Create" method="POST">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Year" class="form-label">年度</label>
        <input asp-for="Year" class="form-control" type="number" value="@DateTime.Now.Year" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label">方案名稱</label>
        <input asp-for="Title" class="form-control" placeholder="請輸入方案名稱" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Category" class="form-label">類別</label>
        <input asp-for="Category" class="form-control" placeholder="例如：能源、交通、設備" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="OwnerDepartment" class="form-label">負責部門</label>
        <input asp-for="OwnerDepartment" class="form-control" placeholder="負責部門" />
        <span asp-validation-for="OwnerDepartment" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ExpectedReductionTon" class="form-label">預期減碳 (噸/年)</label>
        <input asp-for="ExpectedReductionTon" class="form-control" type="number" step="0.1" />
        <span asp-validation-for="ExpectedReductionTon" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProgressPercent" class="form-label">進度 (%)</label>
        <input asp-for="ProgressPercent" class="form-control" type="number" step="1" min="0" max="100" />
        <span asp-validation-for="ProgressPercent" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">說明</label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="請輸入方案說明"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">新增</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">取消</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}