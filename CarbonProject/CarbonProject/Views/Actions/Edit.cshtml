@model CarbonProject.Models.ESGAction
@{
    ViewData["Title"] = "編輯行動方案";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h3>編輯行動方案</h3>

<form asp-controller="Actions" asp-action="Edit" method="POST">
    @Html.AntiForgeryToken()
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="mb-3">
        <label class="form-label">年度</label>
        <input class="form-control" type="number" name="Year" value="@Model.Year" required />
    </div>
    <div class="mb-3">
        <label class="form-label">名稱</label>
        <input class="form-control" name="Title" value="@Model.Title" required />
    </div>
    <div class="mb-3">
        <label class="form-label">類別</label>
        <input class="form-control" name="Category" value="@Model.Category" />
    </div>
    <div class="mb-3">
        <label class="form-label">負責部門</label>
        <input class="form-control" name="OwnerDepartment" value="@Model.OwnerDepartment" />
    </div>
    <div class="mb-3">
        <label class="form-label">預期減碳 (噸/年)</label>
        <input class="form-control" type="number" step="0.1" name="ExpectedReductionTon" value="@Model.ExpectedReductionTon" />
    </div>
    <div class="mb-3">
        <label class="form-label">進度 (%)</label>
        <input class="form-control" type="number" step="1" min="0" max="100" name="ProgressPercent" value="@Model.ProgressPercent" />
    </div>
    <div class="mb-3">
        <label class="form-label">說明</label>
        <textarea class="form-control" name="Description" rows="3">@Model.Description</textarea>
    </div>
    <button type="submit" class="btn btn-primary">儲存</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">取消</a>
</form>