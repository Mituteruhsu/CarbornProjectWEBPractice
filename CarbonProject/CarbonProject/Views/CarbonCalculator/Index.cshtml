@{
    ViewData["Title"] = "碳足跡計算機";
    Layout = "_LayoutDashboard";
}

<link rel="stylesheet" href="~/css/carbonCalculator.css" asp-append-version="true" />

<div class="fade-in">
    <h2>碳足跡計算機</h2>

    <!-- 一鍵加入 -->
    <div class="row row-cols-md-2 justify-content-evenly pb-2">
        <button class="btn-soft col text-nowrap" onclick="quickAdd('transport')">🚗 一鍵加入交通項目</button>
        <button class="btn-soft col text-nowrap" onclick="quickAdd('food')">🍱 一鍵加入飲食項目</button>
        <button class="btn-soft col text-nowrap" onclick="quickAdd('energy')">⚡ 一鍵加入能源項目</button>
        <button class="btn-soft col text-nowrap" onclick="quickAdd('green')">🌿 一鍵加入綠色出行</button>
    </div>

    <!-- 輸入列 -->
    <div class="card p-3">
        <div class="row g-3">
            <div class="col">
                <label for="search" class="form-label">項目搜尋</label>
                <input type="text" class="form-control" id="search" placeholder="輸入關鍵字查詢" autocomplete="off">
                <div id="suggestions" class="suggestions-box" style="display:none"></div>
            </div>

            <div class="col">
                <label for="usage" class="form-label">使用量</label>
                <input type="number" class="form-control" id="usage" step="any" min="0" placeholder="輸入使用量">
                <span id="unit" class="unit-hint"></span>
            </div>

            <div class="col align-self-end">
                <button class="btn btn-primary w-100" style="min-width:200px;" id="btnAdd" type="button" onclick="addRecord()">＋ 加入紀錄</button>
            </div>
        </div>
    </div>


    <!-- 表格 -->
    <div class="card p-3">
        <h3>我的碳排紀錄</h3>
        <div class="row row-cols-3 justify-content-evenly m-1">
            <button class="col btn-outline p-0" type="button" onclick="addRecord()">＋ 新增項目</button>
            <button class="col btn-outline p-0" type="button" onclick="clearAll()">🗑 清空所有</button>
            <button class="col btn-clear p-0" type="button" onclick="clearAll()">🧹 一鍵清空</button>
        </div>
        <div class="table-responsive">
            <table class="table" id="recordTable">
                <thead>
                    <tr>
                        <th class="text-nowrap">項目名稱</th>
                        <th class="text-nowrap">使用量</th>
                        <th>排放係數 (kgCO₂e)</th>
                        <th class="text-nowrap">總排放</th>
                        <th class="text-nowrap">操作</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

    <!-- 總排 + 圖表 -->
    <div class="card p-3">
        <div class="total-display">🌍 總碳排量：<span id="totalEmission">0.00</span> kgCO₂e</div>
        <canvas id="emissionChart" style="max-height:500px;"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.8.2/jspdf.plugin.autotable.min.js"></script>

    <script src="~/js/carbonCalculator.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            console.log('Carbon MVC Calculator Ready');
            if (typeof initCalculator === 'function') initCalculator();
        });
    </script>
}
