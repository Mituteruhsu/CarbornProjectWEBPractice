@model CarbonProject.Models.HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

@section HeadContent {
    <style>
        /* 將原本 carbon-chart 改為 carbon-chart-wrapper，body 不改 */
        .carbon-chart-wrapper {
            max-width: 1000px;
            margin: 2rem auto 0 auto;
            position: relative;
        }

        .carbon-chart-wrapper .title {
        font-size: 2rem;
        color: #2c7a89;
        margin-bottom: 1rem;
        text-align: center;
        }

        .carbon-chart-wrapper .source,
        .carbon-chart-wrapper .sink {
        display: inline-block;
        width: 200px;
        text-align: center;
        margin: 0 20px;
        vertical-align: bottom;
        position: relative;
        }

        .carbon-chart-wrapper .bar {
        width: 100%;
        border-radius: 8px;
        margin-bottom: 0.5rem;
        position: relative;
        }

        .carbon-chart-wrapper .bar.industry {
            height: 150px;
            background: #f28c28;
        }

        .carbon-chart-wrapper .bar.landuse {
            height: 60px;
            background: #f28c28;
        }

        .carbon-chart-wrapper .bar.land-sink {
            height: 120px;
            background: #3b82f6;
        }

        .carbon-chart-wrapper .bar.ocean-sink {
            height: 100px;
            background: #60a5fa;
        }

        .carbon-chart-wrapper .bar-label {
        position: absolute;
        top: -25px;
        width: 100%;
        font-weight: bold;
        color: #333;
        }

        .carbon-chart-wrapper .illustration {
        height: 60px;
        margin-bottom: 5px;
        }

        .carbon-chart-wrapper .illustration img {
            max-height: 60px;
        }

        .carbon-chart-wrapper .row {
        display: flex;
        justify-content: center;
        align-items: flex-end;
        margin-top: 2rem;
        }

        .carbon-chart-wrapper .legend {
        margin-top: 2rem;
        text-align: center;
        }

        .carbon-chart-wrapper .legend span {
            display: inline-block;
            width: 20px;
            height: 20px;
            margin-right: 5px;
            vertical-align: middle;
        }

        .carbon-chart-wrapper .legend .emission {
            background: #f28c28;
        }

        .carbon-chart-wrapper .legend .sink {
            background: #3b82f6;
        }
    </style>
}

<img src="~/img/TerraCPBanner.png" style="max-width: 100%;" alt="Terra CarbonProject Banner" />
<div class="text-center" style="font-size: 3vw; text-wrap: nowrap;">Reduce Carbon, Embrace Green Energy!</div>
<!-- 頁首 -->
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-speedometer2"></i> Overview</h2>
        <span class="text-muted">最後更新時間：@DateTime.Now.ToString("yyyy/MM/dd HH:mm")</span>
    </div>

    <!-- 統計卡片 -->
    <div class="row g-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-primary text-white">
                <div class="card-body">
                    <h6 class="card-title text-uppercase fw-bold">企業總數</h6>
                    <h2 class="fw-bolder">@Model.TotalCompanies</h2>
                    <p class="mb-0"><i class="bi bi-building"></i> 已註冊企業</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-success text-white">
                <div class="card-body">
                    <h6 class="card-title text-uppercase fw-bold">會員總數</h6>
                    <h2 class="fw-bolder">@Model.TotalMembers</h2>
                    <p class="mb-0"><i class="bi bi-people"></i> 已建立帳號</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-warning text-white">
                <div class="card-body">
                    <h6 class="card-title text-uppercase fw-bold">活躍會員</h6>
                    <h2 class="fw-bolder">@Model.ActiveMembers</h2>
                    <p class="mb-0"><i class="bi bi-lightning"></i> 最近登入過的用戶</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-info text-white">
                <div class="card-body">
                    <h6 class="card-title text-uppercase fw-bold">最近 7 日登入</h6>
                    <h2 class="fw-bolder">@Model.RecentLogins</h2>
                    <p class="mb-0"><i class="bi bi-calendar-week"></i> 登入次數</p>
                </div>
            </div>
        </div>
    </div>

    <!-- 分隔線 -->
    <hr class="my-5" />

    <!-- 圖表區（可未來接 Chart.js） -->
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-light d-flex justify-content-between align-items-center mb-2">
                    <span class="fw-bold"><i class="bi bi-bar-chart"></i> 登入趨勢</span>

                    <div class="btn-group" role="group" aria-label="trend-range">
                        <button type="button" class="btn btn-sm btn-outline-secondary trend-range-btn active" data-days="7">7日</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary trend-range-btn" data-days="15">15日</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary trend-range-btn" data-days="30">30日</button>
                    </div>
                </div>
                <div class="card-body text-center text-muted">
                    <canvas id="loginTrendChart" style="height:250px;" data-url="@Url.Action("GetLoginTrend", "Home")?days=7"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-light fw-bold">
                    <i class="bi bi-clipboard-data"></i> 活動紀錄（範例資料）
                </div>
                <div class="card-body">
                    <div style="max-height: 300px; overflow-y: auto;">
                        <table class="table table-hover align-middle" style="border-collapse: separate; border-spacing: 0;">
                            <thead class="table-light" style="position: sticky; top: 0; background: white; z-index: 1;">
                                <tr>
                                    <th>時間</th>
                                    <th>使用者</th>
                                    <th>動作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var act in Model.RecentActivities)
                                {
                                    <tr>
                                        <td>@act.ActionTime.ToString("yyyy/MM/dd HH:mm")</td>
                                        <td>@act.Username</td>
                                        <td>@act.Action</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 新增碳排放柱狀圖區塊 -->
<div class="carbon-chart-wrapper">
    <div class="title">GLOBAL CARBON BUDGET 2025</div>

    <div class="row">
        <!-- Fossil fuels & Industry -->
        <div class="source">
            <div class="illustration">🏭</div>
            <div class="bar industry">
                <div class="bar-label">36.3 Pg CO₂</div>
            </div>
            <div>Fossil fuels & Industry</div>
        </div>

        <!-- Land Use Change -->
        <div class="source">
            <div class="illustration">🌾</div>
            <div class="bar landuse">
                <div class="bar-label">4.4 Pg CO₂</div>
            </div>
            <div>Land Use Change</div>
        </div>

        <!-- Land Sink -->
        <div class="sink">
            <div class="illustration">🌲</div>
            <div class="bar land-sink">
                <div class="bar-label">13.5 Pg CO₂</div>
            </div>
            <div>Land Sink</div>
        </div>

        <!-- Ocean Sink -->
        <div class="sink">
            <div class="illustration">🌊</div>
            <div class="bar ocean-sink">
                <div class="bar-label">10.3 Pg CO₂</div>
            </div>
            <div>Ocean Sink</div>
        </div>
    </div>

    <div class="legend">
        <span class="emission"></span> Anthropogenic emissions
        &nbsp;&nbsp;&nbsp;
        <span class="sink"></span> Sinks of anthropogenic emissions
    </div>
</div>

